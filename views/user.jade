extends layout
script.
  (function (window, document) {
  document.getElementById('toggle').addEventListener('click', function (e) {
      document.getElementById('tuckedMenu').classList.toggle('custom-menu-tucked');
      document.getElementById('toggle').classList.toggle('x');
  });
  })(this, this.document);
block content
  include menu
  div#main.pure-g
    div.pure-u-1.l-box
      div#apiresult #{apiData}
      h3 Welcome #{user.profile.displayName}!
      p
        strong ID Token Payload
        br
        span #{JSON.stringify(decodedIDToken, null, 4)}
      p
        strong Access Token Payload
        br
        span #{JSON.stringify(decodedAccessToken, null, 4)}
      p
        strong id_token
        br
        span #{user.extraParams.id_token}
      p
        strong access_token
        br
        span #{user.extraParams.access_token}
      p
        strong refresh_token
        br
        span #{user.extraParams.refresh_token}
